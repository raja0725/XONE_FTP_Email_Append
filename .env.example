# FTP Email Processor - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control!

# ============================================================================
# FTP Server 1 - Source Server (FPN)
# ============================================================================
FTP1_SERVER=your.ftp.server.com
FTP1_USERNAME=your_username
FTP1_PASSWORD=your_password
FTP1_PORT=21

# ============================================================================
# FTP Server 2 - Destination Server (Email Append Service)
# ============================================================================
FTP2_SERVER=your.sftp.server.com
FTP2_USERNAME=your_username
FTP2_PASSWORD=your_password
FTP2_PORT=22

# ============================================================================
# File Configuration
# ============================================================================
SOURCE_FILENAME=/path/to/source/directory/
FPN_PREVIOUS_DIR=/path/to/previous/directory/
FPN_DESTINATION_DIR=/path/to/destination/directory/
UPLOAD_FILENAME=output_filename.csv

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SENDER_EMAIL=your.email@company.com
SENDER_PASSWORD=your_email_password
RECIPIENT_EMAIL=recipient@company.com

# ============================================================================
# Slack Notifications (optional)
# ============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
